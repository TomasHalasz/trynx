									{input s_eshop: class=>"styled"}<label n:name="$form[s_eshop]">{$form[s_eshop]->caption}</label>
								</div>
							</div>
						</div>
						<div class="col-md-2">
							<div class="form-group">
								<div class="checkbox checkbox-inline checkbox-default">
									{input s_delivered: class=>"styled"}<label n:name="$form[s_delivered]">{$form[s_delivered]->caption}</label>
								</div>
							</div>
						</div>
						<div class="col-md-2">
							<div class="form-group">
								<div class="checkbox checkbox-inline checkbox-default">
									{input s_repair: class=>"styled"}<label n:name="$form[s_repair]">{$form[s_repair]->caption}</label>
								</div>
							</div>
						</div>
						<div class="col-md-2">
							<div class="form-group">
								<div class="checkbox checkbox-inline checkbox-default">
									{input s_exp: class=>"styled"}<label n:name="$form[s_exp]">{$form[s_exp]->caption}</label>
								</div>
							</div>
						</div>
						<div class="col-md-2">
							<div class="form-group">
								<div class="checkbox checkbox-inline checkbox-default">
									{input s_exp_ok: class=>"styled"}<label n:name="$form[s_exp_ok]">{$form[s_exp_ok]->caption}</label>
								</div>
							</div>
						</div>
