{block customjs}
	<script src="{$basePath}/js/app/colorselector.js?{$version}"></script>        								
{/block}

{block #content}

{if $modal}
    <div class="containerMyModal">
{else}
    <div class="containerMy">    
{/if}
    <div class="row mySeparator">
    </div>
    <div class="row mySeparator">
    </div>
    {form edit}
